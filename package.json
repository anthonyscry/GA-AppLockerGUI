{
  "name": "ga-applocker-dashboard",
  "private": true,
  "version": "1.2.8",
  "description": "GA-AppLocker Dashboard - Comprehensive administrative interface for AppLocker policy management",
  "author": "Tony Tran, ISSO, GA-ASI",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:test": "npm run build && cross-env NODE_ENV=production electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:portable": "npm run build && electron-builder --win portable",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:docker": "jest --testPathIgnorePatterns= --testPathPattern=tests/integration/docker.test.ts --testEnvironment=node --runInBand --testTimeout=120000",
    "test:docker:functional": "jest --testPathIgnorePatterns= --testPathPattern=tests/integration/docker-functional.test.ts --testEnvironment=node --runInBand --testTimeout=120000",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "docker:up": "cd docker && docker compose up -d --build",
    "docker:down": "cd docker && docker compose down",
    "docker:logs": "cd docker && docker compose logs -f",
    "docker:test": "cd docker && powershell -ExecutionPolicy Bypass -File run-tests.ps1",
    "docker:shell": "docker exec -it ga-applocker-app bash"
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-is": "^19.2.3",
    "recharts": "^3.6.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.1.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.1.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.ga-asi.applocker",
    "productName": "GA-AppLocker Dashboard",
    "copyright": "Copyright Â© 2024 General Atomics Aeronautical Systems, Inc.",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "config/**/*",
      "assets/**/*",
      "docs/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GA-AppLocker Dashboard"
    }
  }
}
